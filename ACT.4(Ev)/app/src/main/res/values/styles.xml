<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="fotos">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:background">#d94949</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="fotosPX1">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_width">320px</item>
        <item name="android:layout_height">320px</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_margin">10px</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:background">#d94949</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="fotos2">

        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:background">#3d96ad</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
